<html>
	<head>
		<title>Add Repeating Timer Event</title>
		<link rel="stylesheet" type="text/css" href="webif.css">
		<script language="javascript" type="text/javascript" src="window.js"></script>
		<script language="javascript" type="text/javascript" src="timer.js"></script>
		<script language="javascript" type="text/javascript" src="zap.js"></script>
		<script language="javascript" type="text/javascript" src="dhtml.js"></script>
		<script language="javascript" type="text/javascript">#ZAPDATA#</script>
		<script language="javascript" type="text/javascript">
			function startup()
			{
				typeChange();
				init();
			}
			function addFunction()
			{
				var currentType = document.channelselector.type.selectedIndex;
				var type = document.channelselector.type.options[currentType].value;
				alert(type);
				addTimerEvent(type);
			}
			function typeChange()
			{
				var currentType = document.channelselector.type.selectedIndex;
				var type = document.channelselector.type.options[currentType].value;
				if (type == "repeating")
				{
					getElem("id", "sday", null).style.width = 0;
					getElem("id", "smonth", null).style.width = 0;
					getElem("id", "del1", null).firstChild.nodeValue = "";
					getElem("id", "del2", null).firstChild.nodeValue = "";
					getElem("id", "eday", null).style.width = 0;
					getElem("id", "emonth", null).style.width = 0;
					getElem("id", "del3", null).firstChild.nodeValue = "";
					getElem("id", "del4", null).firstChild.nodeValue = "";
					getElem("id", "mo", null).style.width = "20px";
					getElem("id", "tu", null).style.width = "20px";
					getElem("id", "we", null).style.width = "20px";
					getElem("id", "th", null).style.width = "20px";
					getElem("id", "fr", null).style.width = "20px";
					getElem("id", "sa", null).style.width = "20px";
					getElem("id", "su", null).style.width = "20px";
					getElem("id", "tmo", null).firstChild.nodeValue = "Mo";
					getElem("id", "ttu", null).firstChild.nodeValue = "Tu";
					getElem("id", "twe", null).firstChild.nodeValue = "We";
					getElem("id", "tth", null).firstChild.nodeValue = "Th";
					getElem("id", "tfr", null).firstChild.nodeValue = "Fr";
					getElem("id", "tsa", null).firstChild.nodeValue = "Sa";
					getElem("id", "tsu", null).firstChild.nodeValue = "Su";
				}
				else
				{
					getElem("id", "sday", null).style.width = "40px";
					getElem("id", "smonth", null).style.width = "40px";
					getElem("id", "del1", null).firstChild.nodeValue = " - ";
					getElem("id", "del2", null).firstChild.nodeValue = ".";
					getElem("id", "eday", null).style.width = "40px";
					getElem("id", "emonth", null).style.width = "40px";
					getElem("id", "del3", null).firstChild.nodeValue = " - ";
					getElem("id", "del4", null).firstChild.nodeValue = ".";
					getElem("id", "mo", null).style.width = 0;
					getElem("id", "tu", null).style.width = 0;
					getElem("id", "we", null).style.width = 0;
					getElem("id", "th", null).style.width = 0;
					getElem("id", "fr", null).style.width = 0;
					getElem("id", "sa", null).style.width = 0;
					getElem("id", "su", null).style.width = 0;
					getElem("id", "tmo", null).firstChild.nodeValue = "none";
					getElem("id", "ttu", null).firstChild.nodeValue = " ";
					getElem("id", "twe", null).firstChild.nodeValue = " ";
					getElem("id", "tth", null).firstChild.nodeValue = " ";
					getElem("id", "tfr", null).firstChild.nodeValue = " ";
					getElem("id", "tsa", null).firstChild.nodeValue = " ";
					getElem("id", "tsu", null).firstChild.nodeValue = " ";
				}
			}
		</script>
	</head>
	<body onLoad="startup()">
		<form name="channelselector">
			<table border=0 cellpadding=0 cellspacing=10>
				<tr>
					<td>Bouquet:</td>
					<td>
						<select style="width: 210px; font-weight: bold;" onChange=bouquetChange() name="bouquet" size=1></select>
					</td>
				</tr>
				<tr>
					<td>Service:</td>
					<td>
						<select style="width: 410px; font-weight: bold;" onChange=channelChange() name="channel" size=1></select>
					</td>
				</tr>
				<tr>
				<td>Type:</td>
				<td>
					<select style="width: 210px; font-weight: bold;" onChange=typeChange() name="type" size=1>
						<option value="regular" #REGULAR#>One-time Event</option>
						<option value="repeating" #REPEATING#>Repeating Event</option>
					</select>
				</td>
				</tr>
				<tr>
					<td>Start:</d>
					<td>
						<table border=0 cellpadding = 0 cellspacing=0>
						<tr>
							<td>
								<select name="shour" style="width: 40px;" size="1">
									#SHOUROPTS#
								</select>
							</td>
							<td width="10px" align="center">:</td>
							<td>
								<select name="smin" style="width: 40px;" size="1">
									#SMINOPTS#
								</select>
							</td>
							<td id="del1" width="10px" align="center">-</td>
							<td>
								<select id="sday" name="sday" style="width: 40px;" size="1">
									#SDAYOPTS#
								</select>
							</td>
							<td id="del2" width="10px" align="center">.</td>
							<td>
								<select id="smonth" name="smonth" style="width: 40px;" size="1">
									#SMONTHOPTS#
								</select>
							</td>
						</tr>
						</table>
					</td>
				</tr>
				<tr>
					<td>End:</d>
					<td>
						<table border=0 cellpadding = 0 cellspacing=0>
						<tr>
							<td>
								<select name="ehour" style="width: 40px;" size="1">
									#EHOUROPTS#
								</select>
							</td>
							<td width="10px" align="center">:</td>
							<td>
								<select name="emin" style="width: 40px;" size="1">
									#EMINOPTS#
								</select>
							</td>
							<td id="del3" width="10px" align="center">-</td>
							<td>
								<select id="eday" name="eday" style="width: 40px;" size="1">
									#EDAYOPTS#
								</select>
							</td>
							<td id="del4" width="10px" align="center">.</td>
							<td>
								<select id="emonth" name="emonth" style="width: 40px;" size="1">
									#EMONTHOPTS#
								</select>
							</td>
						</tr>
						</table>
					</td>
				</tr>
				<tr>
					<td>Days:</d>
					<td>
						<table border=0 cellpadding = 0 cellspacing=0>
						<tr>
							<td><input id="mo" type="checkbox" name="mo" style="width: 20px;" value="on"></td><td id="tmo" width="30" align="left">Mo</td>
							<td><input id="tu" type="checkbox" name="tu" style="width: 20px;" value="on"></td><td id="ttu" width="30" align="left">Tu</td>
							<td><input id="we" type="checkbox" name="we" style="width: 20px;" value="on"></td><td id="twe" width="30" align="left">We</td>
							<td><input id="th" type="checkbox" name="th" style="width: 20px;" value="on"></td><td id="tth" width="30" align="left">Th</td>
							<td><input id="fr" type="checkbox" name="fr" style="width: 20px;" value="on"></td><td id="tfr" width="30" align="left">Fr</td>
							<td><input id="sa" type="checkbox" name="sa" style="width: 20px;" value="on"></td><td id="tsa" width="30" align="left">Sa</td>
							<td><input id="su" type="checkbox" name="su" style="width: 20px;" value="on"></td><td id="tsu" width="30" align="left">Su</td>
						</tr>
						</table>
					</td>
				</tr>
				<tr>
					<td>After event do:</d>
					<td>
						<select name="after_event" size="1">
							#AFTEROPTS#
						</select>
					</td>
				</tr>
				<tr>
					<td>Description:</td>
					<td>
						<input name="descr" type="text" size="100" maxlength="100" style="color: #000000;">
					</td>
				</tr>
				<tr>
					<td>
						&nbsp;
					</td>
					<td>
						<input type="button" name="add" onClick="javascript:addFunction()" value="Add" style="width: 100px; height: 22px; color: #ffffff; background-color: #12259E">
					</td>
				</tr>

			</table>
		</form>
	</body>
</html>
