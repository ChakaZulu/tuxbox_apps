<html>
	<head>
		<link rel="stylesheet" type="text/css" href="webif.css">
		<script language="javascript" type="text/javascript" src="window.js"></script>
		<script language="javascript" type="text/javascript" src="index.js"></script>
		<script language="javascript" type="text/javascript" src="timer.js"></script>
		<script language="javascript" type="text/javascript" src="dhtml.js"></script>
		<script language="javascript" type="text/javascript" src="zap.js"></script>
		<script language="javascript" type="text/javascript">#ZAPDATA#</script>
		<script>
		function update()
		{
			videoData.location.reload();
			setTimeout("update()", 5000);
		}
		function video(key)
		{
			var selChannel = document.channelselector.channel.selectedIndex;
			var channel = "";
			if (selChannel >= 0)
			{
				currentChannel = selChannel;
				channel = document.channelselector.channel.options[selChannel].value;
				document.location = "cgi-bin/videocontrol?command=" + key + "&sref=" + channel + "&curChannel=" + currentChannel;
			}
			else
				alert("Please select a movie first!");
		}
		function updateVideoBar(playStatus, videoPosition, videoTime)
		{
			for (var i = 1; i <= 20; i += 1)
			{
				if (i <= videoPosition)
					getElem("id", "vid" + i, null).src = "led_on.gif";
				else
					getElem("id", "vid" + i, null).src = "led_off.gif";
			}
			<!--getElem("id", "playStatus", null).firstChild.nodeValue = playStatus;-->
			getElem("id", "videoTime", null).firstChild.nodeValue = videoTime;
		}
		function setVideo(videoPosition)
		{
			document.location = "setVideo?position=" + videoPosition;
			videoData.location.reload();
		}
		</script>
	</head>
	<body onLoad="init()" style="padding: 10px; background-color: #F4F4F4" leftmargin=0 topmargin=0 marginwidth=0 marginheight=0 id="contentcell">
		<map name="ctrl">
			<area shape="circle" coords="30, 25, 15" href="javascript:video('play')" alt="Play">
			<area shape="circle" coords="60, 25, 10" href="javascript:video('stop')" alt="Stop">
			<area shape="circle" coords="95, 25, 10" href="javascript:video('rewind')" alt="Rewind">
			<area shape="circle" coords="120, 25, 10" href="javascript:video('forward')" alt="Forward">
			<area shape="circle" coords="160, 25, 10" href="javascript:video('pause')" alt="Pause">
		</map>
		<table style="table-layout: fixed" id="videocontrol" width="630px" height="50px" border="0" cellspacing="0" cellpadding="0">
		<tr>
			<td style="width:181px">
				<table border="0" width="181px" height="50px" cellspacing="0" cellpadding="0">
				<tr>
					<td><img src="videobar1.jpg" border="0" usemap="#ctrl"></td>
				</tr>
				</table>
			</td>
			<td style="width: 69px">
				<table border="0" width="69px" height="50px" cellspacing="5" cellpadding="0" background="videobar2.jpg">
				<tr>
					<td id="videoTime" valign="center">&nbsp;</td>
				</tr>
				<tr>
					<td id="playStatus" valign="center">&nbsp;</td>
				</tr>
				</table>
			</td>
			<td style="width:380px">
				<table border="0" width="380px" height="50px" cellspacing="0" cellpadding="0" background="videobar3.jpg">
				<tr>
					<td width="40px">&nbsp;</td>
					<td valign="middle">
						<table border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td><a href="javascript:setVideo(1)"><img id="vid1" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(2)"><img id="vid2" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(3)"><img id="vid3" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(4)"><img id="vid4" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(5)"><img id="vid5" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(6)"><img id="vid6" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(7)"><img id="vid7" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(8)"><img id="vid8" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(9)"><img id="vid9" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(10)"><img id="vid10" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(11)"><img id="vid11" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(12)"><img id="vid12" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(13)"><img id="vid13" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(14)"><img id="vid14" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(15)"><img id="vid15" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(16)"><img id="vid16" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(17)"><img id="vid17" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(18)"><img id="vid18" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(19)"><img id="vid19" border="0" src="led_off.gif"></a></td>
							<td><a href="javascript:setVideo(20)"><img id="vid20" border="0" src="led_off.gif"></a></td>
						</tr>
						</table>
					</td>
				</tr>
				</table>
			</td>
		<tr>
		</table>
		<br>
		#MOVIESOURCES#
		<form name="channelselector">
			<table border=0 cellpadding=0 cellspacing=0>
				<tr>
					<td>
						<select style="width: 0px; font-weight: bold; background-color: #F4F4F4" name="bouquet" size=0></select>
					</td>
					<td>
						<select style="width: 630px; font-weight: bold; background-color: #F4F4F4" name="channel" size=#SELSIZE#></select>
					</td>
				</tr>
			</table>
		</form>
		<table border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td style="width: 250px">
					<input name="delete" type="button" style="width: 100px; height: 22px; background-color: #CB0303; color: #FFFFFF;" value="Delete" onClick="javascript:deleteMovie()">
					&nbsp;
					<!--input name="download" type="button" style="width: 100px; height: 22px; background-color: #1FCB12; color: #FFFFFF;" value="Download" onClick="javascript:downloadMovie()"-->
				</td>
				<td style="width: 370px" align=center>
					<a href="javascript:zapChannelBackward()"><img src="up.gif" border="0"></a>
					&nbsp;&nbsp;
					<a href="javascript:zapChannelForward()"><img src="down.gif" border="0"></a>
				</td>
			</tr>
		</table>
		<br>
		<input name="recover" type="button" style="width: 100px; height: 22px; background-color: #12259E; color: #FFFFFF;" value="Recover" onClick="javascript:recoverMovies()">
		<iframe name="videoData" src="videodata" width="100%" height="0" frameborder="0" framemargin="0" framewidth="0"></iframe>
	</body>
</html>
