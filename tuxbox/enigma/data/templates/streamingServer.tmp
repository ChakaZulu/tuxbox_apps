<html>
<head>
	<script language="javascript" type="text/javascript" src="/window.js"></script>
	<script language="javascript">
	function playFile()
	{
		stopStreaming();
		document.location =  "/cgi-bin/movieplayer.pls?command=start&mrl=" + document.form1.mrl.value;
	}
	function playDVD()
	{
		stopStreaming();
		document.location = "/cgi-bin/movieplayer.pls?command=start&mrl=dvdsimple:" + document.form1.drive1.value + ":";
	}
	function playVCD()
	{
		stopStreaming();
		document.location = "/cgi-bin/movieplayer.pls?command=start&mrl=vcd:" + document.form1.drive2.value + ":";
	}
	function settings()
	{
		NewWindow('/cgi-bin/streamingServerSettings', 'streamingserver', '780', '600', 'yes');
	}
	function stopStreaming()
	{
		document.location =  "/cgi-bin/movieplayer?command=stop";
	}
	</script>
</head>
<body style="padding: 10px; background-color: #F4F4F4;" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" id="contentcell">
	<form name="form1">
		<input type="button" style="width: 100; height: 22" onClick="playFile()" value="File">
		&nbsp;
		<input type="file" size="40" height="22" name="mrl">
		<br><br>
		<input type="button" style="width: 100; height: 22" onClick="playDVD()" value="DVD">
		&nbsp;Drive:&nbsp;
		<input type="text" name="drive1" value="#DRIVE#" size="1" readonly>
		<br><br>
		<input type="button" style="width: 100; height: 22" onClick="playVCD()" value="(S)VCD">
		&nbsp;Drive:&nbsp;
		<input type="text" name="drive2" value="#DRIVE#" size="1" readonly>
		<br><br><br>
		<input type="button" style="width: 100; height: 22" onClick="settings()" value="Settings">
		<br><br>
		<input name="stop" type="button" style="width: 100px; height: 22px; background-color: #CB0303; color: #FFFFFF;" value="Stop" onClick="stopStreaming()">
	</form>
	<iframe name="vlccmd" src="" width="100%" height="0" frameborder="0" framemargin="0" framewidth="0"></iframe>
</body>
</html> 
