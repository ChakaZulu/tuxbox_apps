<rcdefaults>
	<author>
		<name>Felix Domke</name>
		<email>tmbinc@gmx.net</email>
	</author>

	<device identifier="DBOX-2 FP IR" >
		<keys>
			<key name="0" code="2" />
			<key name="1" code="3" />
			<key name="2" code="4" />
			<key name="3" code="5" />
			<key name="4" code="6" />
			<key name="5" code="7" />
			<key name="6" code="8" />
			<key name="7" code="9" />
			<key name="8" code="a" />
			<key name="9" code="b" />
			<key name="right" code="6a" />
			<key name="left" code="69" />
			<key name="up" code="67" />
			<key name="down" code="6c" />
			<key name="pgup" code="68" />
			<key name="pgdown" code="6d" />
			<key name="ok" code="160" />
			<key name="mute" code="71" />
			<key name="power" code="74" />
			<key name="green" code="18f" />
			<key name="yellow" code="190" />
			<key name="red" code="18e" />
			<key name="blue" code="191" />
			<key name="+" code="73" />
			<key name="-" code="72" />
			<key name="?" code="8a" />
			<key name="d-box" code="8d" />
			<key name="home" code="66" />
		</keys>

		<actionmap name="cursor">
			<action name="up" key="up" flags="mr" />
			<action name="down" key="down" flags="mr" />
			<action name="left" key="left" flags="mr" />
			<action name="right" key="right" flags="mr" />
			<action name="ok" key="ok" flags="m" />
			<action name="cancel" key="home" flags="m" />
		</actionmap>
	
		<actionmap name="focus">
			<action name="up" key="up" flags="mr" />
			<action name="down" key="down" flags="mr" />
			<action name="left" key="left" flags="mr" />
			<action name="right" key="right" flags="mr" />
		</actionmap>
	
		<actionmap name="list">
			<action name="pagedown" key="right" flags="mr" />
			<action name="pageup" key="left" flags="mr" />
		</actionmap>

		<actionmap name="enigmaMain">
			<action name="showMainMenu" key="d-box" flags="m" />
			<action name="standby_press" key="power" flags="m" />
			<action name="standby_repeat" key="power" flags="r" />
			<action name="standby_release" key="power" flags="b" />
			<action name="showSubservices" key="green" flags="m" />
			<action name="showAudio" key="yellow" flags="m" />
			<action name="pluginVTXT" key="blue" flags="m" />
			<action name="showEPGList" key="red" flags="m" />
			<action name="volumeUp" key="+" flags="mr" />
			<action name="volumeDown" key="-" flags="mr" />
			<action name="toggleMute" key="mute" flags="mr" />
			<action name="startSkipR" key="red" flags="m" />
			<action name="repeatSkipR" key="red" flags="r" />
			<action name="stopSkipR" key="red" flags="b" />
			<action name="play" key="green" flags="m" />
			<action name="pause" key="yellow" flags="m" />
			<action name="stop" key="home" flags="m" />
			<action name="startSkipF" key="blue" flags="m" />
			<action name="repeatSkipF" key="blue" flags="r" />
			<action name="stopSkipF" key="blue" flags="b" />
		</actionmap>

		<actionmap name="enigmaMain" style="default" descr="Default (Enigma)" >
			<action name="nextService" key="right" flags="mr" />
			<action name="prevService" key="left" flags="mr" />
			<action name="showInfobar" key="ok" flags="m" />
			<action name="hideInfobar" key="ok" flags="m" />
			<action name="serviceListDown" key="down" flags="m" />
			<action name="serviceListUp" key="up" flags="m" />
			<action name="showEPG" key="?" flags="m" />
		</actionmap>

		<actionmap name="enigmaMain" style="classic" descr="Classic (Neutrino)" >
			<action name="hideInfobar" key="home" flags="m" />
			<action name="nextService" key="up" flags="mr" />
			<action name="prevService" key="down" flags="mr" />
			<action name="showInfobar" key="?" flags="m" />
			<action name="showInfobarEPG" key="?" flags="m" />
			<action name="showServiceSelector" key="ok" flags="m" />
		</actionmap>

		<actionmap name="timerView">
			<action name="removeTimerEntry" key="red" flags="m" />
		</actionmap>

		<actionmap name="epgSelector">
			<action name="addTimerEvent" key="green" flags="m" />
			<action name="removeTimerEvent" key="red" flags="m" />
		</actionmap>

		<actionmap name="serviceSelector">
			<action name="nextBouquet" key="+" flags="mr" />
			<action name="prevBouquet" key="-" flags="mr" />
			<action name="pathUp" key="d-box" flags="m" />
			<action name="showEPGSelector" key="?" flags="m" />
			<action name="showMenu" key="red" flags="m" />
			<action name="toggleStyle" key="green" flags="m" />
			<action name="toggleFocus" key="yellow" flags="m" />
			<action name="toggleRoot" key="blue" flags="m" />
		</actionmap>

		<actionmap name="numbers">
			<action name="0" key="0" flags="mr" />
			<action name="1" key="1" flags="mr" />
			<action name="2" key="2" flags="mr" />
			<action name="3" key="3" flags="mr" />
			<action name="4" key="4" flags="mr" />
			<action name="5" key="5" flags="mr" />
			<action name="6" key="6" flags="mr" />
			<action name="7" key="7" flags="mr" />
			<action name="8" key="8" flags="mr" />
			<action name="9" key="9" flags="mr" />
		</actionmap>

		<actionmap name="enigmaStandby">
			<action name="wakeUp" key="power" flags="m" />
		</actionmap>

		<actionmap name="enigmaEventView">
			<action name="close" key="?" flags="m" />
		</actionmap>

		<actionmap name="enigmaVCR">
			<action name="volumeUp" key="+" flags="mr" />
			<action name="volumeDown" key="-" flags="mr" />
		</actionmap>
	</device>
</rcdefaults>
