<rcdefaults>
	<author>
		<name>Felix Domke</name>
		<email>tmbinc@gmx.net</email>
	</author>
	
	<device identifier="Dreambox" >
		<keys>
			<key name="ok" code="1414" />
			<key name="dream-box" code="1400" />
			<key name="power" code="1401" />
			<key name="tv" code="1402" />
			<key name="radio" code="1403" />
			<key name="text" code="1404" />
			<key name="help" code="1405" />
			<key name="chup" code="1406" />
			<key name="chdown" code="1407" />
			<key name="LAME" code="1408" />
			<key name="mute" code="1409" />
			<key name="volup" code="140a" />
			<key name="voldown" code="140b" />
			<key name="guide" code="140c" />
			<key name="info" code="140d" />
			<key name="audio" code="140e" />
			<key name="video" code="140f" />
			<key name="up" code="1410" />
			<key name="down" code="1411" />
			<key name="left" code="1412" />
			<key name="right" code="1413" />
			<key name="ok" code="1414" />
			<key name="red" code="1415" />
			<key name="green" code="1416" />
			<key name="yellow" code="1417" />
			<key name="blue" code="1418" />
			<key name="1" code="1419" />
			<key name="2" code="141a" />
			<key name="3" code="141b" />
			<key name="4" code="141c" />
			<key name="5" code="141d" />
			<key name="6" code="141e" />
			<key name="7" code="141f" />
			<key name="8" code="1420" />
			<key name="9" code="1421" />
			<key name="0" code="1422" />
			<key name="prev" code="1423" />
			<key name="next" code="1424" />
			<key name="a" code="1425" />
			<key name="b" code="1426" />
			<key name="c" code="1427" />
			<key name="d" code="1428" />
			<key name="e" code="1429" />
			<key name="f" code="142a" />
		</keys>
		<actionmap name="cursor">
			<action name="up" key="up" flags="mr" />
			<action name="down" key="down" flags="mr" />
			<action name="left" key="left" flags="mr" />
			<action name="right" key="right" flags="mr" />
			<action name="ok" key="ok" flags="m" />
			<action name="cancel" key="LAME" flags="m" />
		</actionmap>
		<actionmap name="focus">
			<action name="up" key="up" flags="mr" />
			<action name="down" key="down" flags="mr" />
			<action name="left" key="left" flags="mr" />
			<action name="right" key="right" flags="mr" />
		</actionmap>
		<actionmap name="list">
			<action name="pagedown" key="next" flags="mr" />
			<action name="pageup" key="prev" flags="mr" />
			<action name="pagedown" key="right" flags="mr" />
			<action name="pageup" key="left" flags="mr" />
		</actionmap>
		<actionmap name="enigmaMain">
			<action name="showMainMenu" key="dream-box"  flags="m" />
			<action name="standby_press" key="power" flags="m" />
			<action name="standby_repeat" key="power" flags="r" />
			<action name="standby_release" key="power" flags="b" />
			<action name="toggleInfobar" key="ok" flags="m" />
			<action name="showServiceSelector" key="tv" flags="m" />
			<action name="showSubservices" key="green" flags="m" />
			<action name="showAudio" key="yellow" flags="m" />
			<action name="pluginVTXT" key="blue" flags="m" />
			<action name="showEPGList" key="red" flags="m" />
			<action name="showEPG" key="info" flags="m" />
			<action name="nextService" key="chdown" flags="mr" />
			<action name="prevService" key="chup" flags="mr" />
			<action name="serviceListDown" key="down" flags="m" />
			<action name="serviceListUp" key="up" flags="m" />
			<action name="volumeUp" key="volup" flags="mr" />
			<action name="volumeDown" key="voldown" flags="mr" />
			<action name="toggleMute" key="mute" flags="mr" />
		</actionmap>
		<actionmap name="serviceSelector">
			<action name="nextBouquet" key="next" flags="mr" />
			<action name="prevBouquet" key="prev" flags="mr" />
			<action name="showBouquetSelector" key="guide" flags="m" />
			<action name="showEPGSelector" key="info" flags="m" />
			<action name="showAllServices" key="tv" flags="m" />
		</actionmap>
		<actionmap name="numbers">
			<action name="0" key="0" flags="mr" />
			<action name="1" key="1" flags="mr" />
			<action name="2" key="2" flags="mr" />
			<action name="3" key="3" flags="mr" />
			<action name="4" key="4" flags="mr" />
			<action name="5" key="5" flags="mr" />
			<action name="6" key="6" flags="mr" />
			<action name="7" key="7" flags="mr" />
			<action name="8" key="8" flags="mr" />
			<action name="9" key="9" flags="mr" />
		</actionmap>
		<actionmap name="enigmaStandby">
			<action name="wakeUp" key="power" flags="m" />
		</actionmap>
		<actionmap name="enigmaVCR">
			<action name="volumeUp" key="volup" flags="mr" />
			<action name="volumeDown" key="voldown" flags="mr" />
		</actionmap>
	</device>
</rcdefaults>
